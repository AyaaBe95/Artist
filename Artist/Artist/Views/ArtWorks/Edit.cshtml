@model Artist.Models.ArtWorks

@{
    Layout = "~/Views/Shared/Customer.cshtml";

    ViewData["Title"] = "Edit";
}

<div class="content mt-3">
    <div class="row align-items-center justify-content-center">

        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div id="contact-form" class="form-container" data-form-container>
                    <div class="row align-items-center justify-content-center">
                        <div class="form-title ">
                            <h2 class="text-center">Edit Drawing</h2>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ArtId" />

                    <img src=@Url.Content("~/Image/" + Model.ImageName) asp-append-version="true" style="width:250px; height:250px" />
                    <div class="input-container">
                        <div class="row">
                            <div class="row" hidden>
                                <label asp-for="ImageName" class="control-label">Image</label>

                                <input asp-for="ImageName"  class="btn btn-block submit-form" />
                                <span asp-validation-for="ImageName" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <label asp-for="ImageFile" class="control-label">Image</label>
                                <input asp-for="ImageFile" class="" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="Title" >
                            </span>
                        </div>
                        <div class="row">

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="ArtistFname" placeholder="Position">
                            </span>
                        </div>

                        <div class="row">
                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="ArtistLname" placeholder="Facebook Link">
                            </span>
                        </div>
                        <div class="row">

                            <label asp-for="CategoryId" class="control-label"> Category</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" style="font-size:large; height:35px"></select>
                        </div>
                        <div class="row">
                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="ArtPrice" placeholder="Instgram Link">
                            </span>
                        </div>
                        <div class="row">
                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="Quantity" placeholder="Twiter Link">
                            </span>
                        </div>
                        <div class="row">
                            <span class="req-input message-box">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <textarea type="textarea" asp-for="Description" data-min-length="10" placeholder="Description"></textarea>
                        </div>
                        <div class="row submit-row">
                            <button type="submit" class="btn btn-block submit-form" value="Edit" style="font-size:large;">Edit</button>
                        </div>
                    </div>
                </div>
            </form>
            <div>
                <a asp-action="CustomerArts">Back to List</a>
            </div>
        </div>
    </div>
</div>






