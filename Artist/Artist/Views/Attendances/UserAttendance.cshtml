@model IEnumerable<Artist.Models.Attendance>
@{
    int rowNo1 = 0;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Employee.cshtml";


}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row align-items-center justify-content-center">

            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Attendance Table</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Date of Day</th>
                                    <th scope="col">Start Time</th>
                                    <th scope="col">End Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <th scope="row">@(rowNo1 += 1)</th>
                                    <td>@Html.DisplayFor(modelItem => item.DateOfDay)</td>

                                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->






