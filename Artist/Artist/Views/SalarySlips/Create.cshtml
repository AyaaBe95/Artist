@model Artist.Models.SalarySlip

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Accountant.cshtml";

}


<div class="content mt-3">
    <div class="row align-items-center justify-content-center">

        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div id="contact-form" class="form-container" data-form-container>
                    <div class="row align-items-center justify-content-center">
                        <div class="form-title ">
                            <h2 class="text-center">Add Slip</h2>
                        </div>
                    </div>
                    <div class="input-container">
                        <div class="row" hidden>
                            <input asp-for="FileName" class="form-control" />
                            <span asp-validation-for="FileName" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <label asp-for="SlipFile" class="control-label">Upload File</label>

                            <span class="req-input">
                                <input asp-for="SlipFile" accept="application/pdf" type="file" required >
                            </span>
                        </div>
                        <div class="row">
                            <label asp-for="UserId" class="control-label">Employee Email</label>

                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" style="font-size: large; height: 40px; " required></select>
                        </div>
                        <div class="row">
                            <label asp-for="SlipDate" class="control-label">Slip Date</label>

                            <span class="req-input">
                                <input type="date" asp-for="SlipDate" style=" width: 100%;" required>
                            </span>
                        </div>

                        <div class="row submit-row">
                            <button type="submit" class="btn btn-block submit-form" value="Create" style="font-size:large;">Create</button>
                        </div>
                    </div>
                </div>
            </form>
            <div>
                <a asp-action="CustomerArts">Back to List</a>
            </div>
        </div>
    </div>
</div>





