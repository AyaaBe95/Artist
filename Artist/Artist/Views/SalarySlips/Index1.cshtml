@model IEnumerable<Artist.Models.SalarySlip>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Employee.cshtml";
    int rowNo1 = 0;

    }


<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row  align-items-center justify-content-center">

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Salary Slips Table</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <th>Slip Date</th>
                                    <th>Link</th>
                                   

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>

                                    <td>
                                      @(rowNo1 += 1)
                                    </td>
                                    <td>
                                        @item.SlipDate.Value.ToShortDateString()
                                    </td>

                                    <td>@Html.ActionLink("Download", "Download", new { SlipFile = item.FileName }, null)</td>


                                </tr>


                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>
