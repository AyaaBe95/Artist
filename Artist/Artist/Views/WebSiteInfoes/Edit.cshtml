@model Artist.Models.WebSiteInfo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin2.cshtml";

}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Teams</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    
    <div class="row align-items-center justify-content-center">

        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div id="contact-form" class="form-container" data-form-container>
                    <div class="row align-items-center justify-content-center">
                        <div class="form-title ">
                            <h2 class="text-center">Edit Website Info</h2>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="WebId" />

                    <div class="input-container">
                        <div class="row">
                            <div class="row" hidden>
                                <label asp-for="BackgroundImage" class="control-label">BackgroundImage</label>

                                <input asp-for="BackgroundImage" class="btn btn-block submit-form" />
                                <span asp-validation-for="BackgroundImage" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <label asp-for="ImageFile2" class="control-label">Background</label>
                                <input asp-for="ImageFile2" class="btn btn-block " accept="image/*" />
                                <span asp-validation-for="ImageFile2" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="row">
                            <label class="control-label">Logo</label>

                            <span class="req-input">

                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="OpenTime">
                            </span>
                        </div>


                        <div class="row">
                            <label class="control-label">Name</label>

                            <span class="req-input">

                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="WebSiteName">
                            </span>
                        </div>
                        <div class="row">
                            <label class="control-label">Number 1</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="tel" asp-for="PhoneNumber1" placeholder="Number 1">
                            </span>
                        </div>
                        <div class="row">
                            <label class="control-label">Number 2</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="tel" asp-for="PhoneNumber2">
                            </span>
                        </div>

                        <div class="row">
                            <label class="control-label">Email</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="email" asp-for="Email">
                            </span>
                        </div>
                        <div class="row">
                            <label class="control-label">Country</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="Country" placeholder="Country">
                            </span>
                        </div>
                        <div class="row">
                            <label class="control-label">City</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="City" placeholder="City">
                            </span>
                        </div>
                        <div class="row">
                            <label class="control-label">FacebookLink</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="FacebookLink" placeholder="Facebook Link">
                            </span>
                        </div>
                        <div class="row">
                            <label class="control-label">InstagramLink</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="InstgramLink" placeholder="Instgram Link">
                            </span>
                        </div>
                        <div class="row">
                            <label class="control-label">TwiterLink</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="TwiterLink" placeholder="Twiter Link">
                            </span>
                        </div>

                        <div class="row">
                            <label class="control-label">Sub Title</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="Logo">
                            </span>
                        </div>

                        <div class="row submit-row">
                            <button type="submit" class="btn btn-block submit-form" value="Edit" style="font-size:large;">Edit</button>
                        </div>
                    </div>
                </div>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>






