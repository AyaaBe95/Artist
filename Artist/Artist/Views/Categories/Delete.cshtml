@model Artist.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Admin2.cshtml";

}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Category</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Delete</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3 animated fadeIn">
    <div class="row align-items-center justify-content-center">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            Are you sure you want to delete this?
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    <div class="row align-items-center justify-content-center">
        <div class="col-md-4">
            <div class="card border border-primary">
                <div class="card-header text-center">
                    <strong class="card-title ">Category Name</strong>
                </div>
                <div class="card-body">
                    <p class="card-text text-center">
                        @Html.DisplayFor(model => model.CategoryName)
                    </p>
                </div>
                <div class="row align-items-center justify-content-center mb-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CategoryId" class="text-center" />
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm text-center" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>






