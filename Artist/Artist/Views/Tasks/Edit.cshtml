@model Artist.Models.Tasks

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin2.cshtml";

}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Tasks</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="row align-items-center justify-content-center">

        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TaskId" />
                <div id="contact-form" class="form-container" data-form-container>
                    <div class="row align-items-center justify-content-center">
                        <div class="form-title ">
                            <h2 class="text-center">Edit Task</h2>
                        </div>
                    </div>
                    <div class="input-container">
                        <div class="row">
                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="text" asp-for="Title" data-min-length="8" placeholder="Title" required>
                            </span>
                        </div>
                        <div class="row">
                            <label asp-for="UserId" class="control-label">Employee Email</label>

                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" style="font-size: large; height: 40px; "></select>
                        </div>
                        <div class="row">
                            <label asp-for="StartDate" class="control-label">Start Date</label>

                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="date" asp-for="StartDate">
                            </span>
                        </div>
                        <div class="row">
                            <label asp-for="EndDate" class="control-label">End Date</label>
                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="date" asp-for="EndDate">
                            </span>
                        </div>
                        <div class="row" hidden>
                            <label asp-for="Status" class="control-label">status</label>
                            <span class="req-input">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <input type="date" asp-for="Status">
                            </span>
                        </div>
                        <div class="row">
                            <span class="req-input message-box">
                                <span class="input-status" data-toggle="tooltip" data-placement="top"> </span>
                                <textarea type="textarea" asp-for="Description" data-min-length="10" placeholder="Description"></textarea>
                        </div>
                        <div class="row submit-row">
                            <button type="submit" class="btn btn-block submit-form" value="Save" style="font-size:large;">Save</button>
                        </div>
                    </div>
                </div>
            </form>
            <div>
                <a asp-action="New">Back to List</a>
            </div>
        </div>
    </div>
</div>




